{
  "name": "@kirpyv3/mcp-server",
  "version": "1.1.0",
  "description": "MCP Server for KirpyV3 Crypto Trading Platform",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "kirpyv3-mcp": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "tsx src/index.ts",
    "start:http": "tsx src/http-server.ts",
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/http-server.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "crypto",
    "trading",
    "ai",
    "agent"
  ],
  "author": "KirpyV3 Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gnyselcuk/Kirpyv3-mcp-server.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.9.0",
    "keytar": "^7.9.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@types/validator": "^13.11.8",
    "vitest": "^4.0.18"
  }
}